<!DOCTYPE html>
<html>
  <head>
    <title>BookManagementApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav>
      <div class="header-left">
        <h1>書籍管理アプリ</h1>
      </div>
      <div class="header-right">
        <% if user_signed_in? %> 
          <li><%= link_to "マイページ", user_path(current_user.id),class:"btn btn-dark btn-lg"%></li>
          <li><%= link_to '感想を見る' , posts_path ,class:"btn btn-info btn-lg"%></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"btn btn-danger btn-lg"%></li>
        <% else %>
          <li><%= link_to 'サインアップ', new_user_registration_path,class:"btn btn-info btn-lg"%></li>
          <li><%= link_to 'ログイン', new_user_session_path,class:"btn btn-dark btn-lg"%></li>
        <% end %>
      </div>  
    </nav>
  </header>
  <body>
    <div class="container">
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
    </div>
  </body>
</html>
