<div class="row pt-2">
  <%= paginate @publications, remote: true if @publications.present? %>
</div>
<div class="row publication_container">
  <% @publications.each do |publication| %>
    <div class="col-3 pb-2">
      <div class="card bg-light mt-3 h-100">
        <div class="card-header h-25">
          <span class='text-left'><%= publication[:title] %></span><br>
          <span class='text-left'><%= publication[:author] %></span>
        </div>
        <%= form_with(model: @publication, url: publications_path, local: true, class:'text-center m-1') do |f|%>
          <%= f.hidden_field :isbn_code, value: publication[:isbn_code]%>
          <%= f.hidden_field :author, value: publication[:author]%>
          <%= f.hidden_field :title, value: publication[:title]%>
          <%= f.hidden_field :image, value: publication[:image]%>
          <%= f.hidden_field :price, value: publication[:price]%>
          <%= button_tag type: :submit , data: {confirm: "#{publication[:title]}を登録しますがよろしいですか？"}, id:"img_btn" do %>
            <%= image_tag(publication[:image] , size: '200x200')%>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>