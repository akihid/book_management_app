<h1>確認画面</h1>
<div class="row">
  <div class="col-md-6">
    <%= form_with(model:@post , local: true ,url: posts_path) do |f|%>

      <div class="form-group">
        <%= f.label :title %>
        <%= @post.title %>
        <%= f.hidden_field :title %>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= @post.content %>
        <%= f.hidden_field :content %>
      </div>

      <div class="form-group">
        <%= @post.publication.title %>
        <%= image_tag(@post.publication.image, size: '200x200') %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :publication_id, value: @post.publication.id%>
      </div>   
      
      <%= f.submit '登録',class:"btn btn-default btn-xs"%>
    </div>
    <% end %>
  </div>
  <%= form_with(model: @post, local: true, url: new_post_path, method: 'get') do |f|%>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :content %>
    <%= f.hidden_field :publication_id, value: @post.publication.id%>
    <%= f.submit '戻る' , name: 'back',class:"btn btn-info btn-xs"%>
  <% end %>
</div>

