<div class="row">
  <div class="card bg-light col-md-6">
    <%= form_with(model:@post , local: true ,url: posts_path) do |f|%>
      <div class="row card bg-light text-center pt-2">
        <div class="form-group">
          <%= @post.publication.title %>
        </div>
        <div class="book_image">
          <%= image_tag(@post.publication.image, size: '200x200') %>
        </div>
      </div>

      <div class="form-group">
        <span><%= f.label :title %></span>
        <span class="form-control"><%= @post.title%></span>
        <%= f.hidden_field :title %>
      </div>

      <div class="form-group">
        <span><%= f.label :content %></span>
        <span class="form-control" id="post_content"><%= simple_format(@post.content) %></span>
        <%= f.hidden_field :content %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :publication_id, value: @post.publication.id%>
      </div>   
      
      <div class="text-center pb-2">
        <%= f.submit '登録',class:"btn btn-info btn-xs"%>
      </div>
    <% end %>

    <%= form_with(model: @post, local: true, url: new_post_path, method: 'get', class:'text-center') do |f|%>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :publication_id, value: @post.publication.id%>
      <%= f.submit '修正する' , name: 'back',id:'btn_back', class:"btn btn-info btn-xs"%>
    <% end %>
  </div>
</div>

