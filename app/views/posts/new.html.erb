<% if @post.errors.any? %>
  <div id="error_explantion">
  <h2><%= pluralize(@post.errors.count , '件' )%>のエラーがあります</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<div class="row">
  <div class="card bg-light col-md-6">
    <%= form_with(model: @post, local: true, url: confirm_posts_path) do |f|%>
      <div class="bg-light text-center pt-2">
        <div class='form-group'>
          <%= f.label '対象' %>
          <%= f.collection_select :publication_id, current_user.publications, :id, :title, {prompt: false},
              selected: params[:post] ? params[:post][:publication_id] : nil, class:"form-control" %>
        </div>
        <div class="book_image">
          <%= render partial: 'books/image', locals: {publication_id: current_user.publications.first.id} %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title ,class:"form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content , class:"form-control h-100"%>
      </div>
      <div class="text-center pb-2">
        <%= f.submit '登録', class:"btn btn-info btn-xs"%>
        <%= link_to '一覧へ' , posts_path, class:"btn btn-info btn-xs"%>
      </div>

    <% end %>
  </div>

</div>