<%= render partial: 'errors/error_messages', locals: { object: @post } %>

<div class="row">
  <div class="card bg-light col-6">
    <%= form_with(model: @post, local: true) do |f|%>
      <div class="row card bg-light text-center pt-2">
        <div class='form-group'>
          <%= @post.publication.title %>
        </div>
        <div class="book_image">
          <%= image_tag(@post.publication.image, size: '200x200') %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title ,class:"form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content ,class:"form-control"%>
      </div>

      <div class="text-center pb-2">
        <%= f.submit '登録',class:"btn btn-info btn-xs"%>
        <%= link_to '一覧へ' , posts_path,class:"btn btn-info btn-xs"%>
      </div>
    <% end %>
  </div>

</div>