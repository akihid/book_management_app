<div class="row">
  <div class="col-md-6">
    <p>投稿者：<%= @post.user.name %></p>
    <p>タイトル:<%= @post.title %></p>
    <p>詳細:<%= @post.content %></p>
    <% if @good.present? %>
      <%= link_to 'お気に入り解除する', good_path(id: @good.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', goods_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= @post.publication.title %>
    <p><%= image_tag(@post.publication.image, size: '200x200') %></p>
  </div>
</div>

  <p>コメント一覧</p>
  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
  </div>
  <br>
  <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>

  <%= link_to '一覧へ', posts_path %>
