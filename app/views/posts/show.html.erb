<div class="row" style="height: 270px;">
  <div class="card bg-light col-md-6 h-50">
    <div class="card-title">
      <h3 class="text-left"><%= @post.title %></h3>
    </div>
    <div class="card-title text-right">
      by. <%= @post.user.name %>
    </div>
    <div class="text-right" id="goods_buttons_<%= @post.id %>">
      <%= render partial: 'goods/good', locals: { post: @post, goods: @goods} %>
    </div>
  </div>
  <div class="card bg-light col-md-6 text-center h-100">
    <%= @post.publication.title %>
    <p><%= image_tag(@post.publication.image, size: '200x200') %></p>
    <div class="text-right">
      <% if @post.user.id == current_user.id %>
        <%= link_to '編集' , edit_post_path(@post.id)%>
      <% end %>
    </div>
  </div>
</div>
<div class="row" style="height: 250px;">
  <h5 class="text-left">感想</h5>
  <div class="card bg-light col-md-12 h-75">
    <div class="card-body">
      <%= simple_format(@post.content) %>
    </div>
  </div>
</div>
<div class="row">
  <h5 class="text-left">コメント一覧</h5>
  <div class="card bg-light col-md-12">
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
    </div>
    <br>
    <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
  </div>
  <%= link_to '一覧へ', posts_path , class:"btn btn-info btn-xs mx-auto"%>
</div>






